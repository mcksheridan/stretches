doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', type='text/css', href='../stylesheets/routines.css')
    body.page
        article.routines
            h1.routines__title Stretch Timers
            div
                a(href='add').routines__add
                    span.material-icons add
                    |  Add a Routine
            h2.routines__subheader Available Routines
            ul.routines__list.list
                each routine in data
                    li.list__item
                        a(href=`routine/${routine.routine_id}` class='list__link')=routine.name